<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Project</title>
    <link rel="icon" href="assets/images/34464790.png">
    <link rel="stylesheet" href="../assets/css/myproject.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css">
  </head>
  <body>
    <nav>
      <div class="nav-left">
        <img src="https://dumbways.id/assets/images/brandred.png" alt="logo-DW" width="10%" />
        <ul>
          <li>
            <a href="/">Home</a>
          </li>
          <li>
            <a href="/myproject">Add Project</a>
          </li>
        </ul>
      </div>
      <div class="nav-right">
        <a href="/contact">Contact Me</a>
      </div>
    </nav>

  <div class="isi-form">
    <h1 class="add-my-project" >EDIT PROJECT</h1>
    <form action="/edit-project/{{index}}" method="post">
      <div class="name">
        <label for="input-name">Project Name</label>
        <input class="nama" id="input-name" type="input-name" 
        name="inputName"/>
      </div>
      <div class="Date">
        <div class="start-date" style="margin-right: 55px;" >
          <label for="input-date" >Start Date</label>
          <input class="tanggal" id="input-start-date" type="date" 
          name="inputStartDate"/>
        </div>
      
        <div class="end-date">
          <label for="input-date">End Date</label>
          <input class="tanggal" id="input-end-date" type="date" 
          name="inputEndDate"/>
        </div>
      </div>

      <div>
        <label for="input-message">Description</label>
        <textarea class="pesan" id="input-message" cols="30" rows="10" style="resize: none"
        name="inputDescription"></textarea>
      </div>

      <div>
        <label for="checkbox">Technologies</label>
        <div class="checkbox-technologies" name="checkboxDefault">
          <div class="checkbox-kiri" >
            <div>
              <input value="fa-node-js" type="checkbox" id="inputNode">
              <label 
              class="fontTech" 
              for="inputNode"
              name="inputNode"
              > Node JS </label>
            </div>
            <div>
              <input value="fa-react" type="checkbox" id="inputReact">
              <label 
              class="fontTech" 
              for="inputReact" 
              name="inputReact"
              > React JS </label>
            </div>
          </div>
          <div class="checkbox-kanan">
            <div>
              <input value="fa-java" type="checkbox" id="inputNext">
              <label 
              class="fontTech" 
              for="inputNext"
              name="inputNext"> Next JS </label>
            </div>
            <div>
              <input value="fa-square-js" type="checkbox" id="inputTS">
              <label 
              class="fontTech" 
              for="inputTS"
              name="inputTS"
              > TypeScript </label>
            </div>
          </div>
        </div>
      </div>

     <div>
      <label>Upload Image</label>
      <div class="input-blog-image-group">
        <label for="input-blog-image">
          <img src="/assets/images/file.png" alt="file" />
        </label>
        <input type="file" id="input-blog-image" hidden />
      </div>
    </div>

      <div class="button">
        <button type="submit">Submit</button>
      </div>
    </form>
    </div>

  </div>
  </body>
</html>