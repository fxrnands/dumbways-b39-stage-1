<html>
  <head>
    <title>Contact Me</title>
    <link rel="stylesheet" href="assets/css/contact.css" />
    <link rel="icon" href="assets/images/34464790.png" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous" />
  </head>

  {{! NAVBAR }}
  <nav class="navbar navbar-expand-lg bg-light fixed-top" style="height: 60px;">
    <div class="container-fluid">
      <img src="assets/images/logo.png" alt="logo-dumbways" class="ms-4 me-4" />
      <a class="navbar-brand" href="#">Personal Web</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/">Home</a>
          </li>
          {{#if this.isLogin}}
            <li class="nav-item">
              <a class="nav-link" href="/myproject">Add Project</a>
            </li>
          {{/if}}
        </ul>
        <form class="d-flex mt-3">
          {{#if this.isLogin}}
            <a href="#" class="btn text-dark fw-bold">Hallo, {{user.name}}</a>
            <a href="/logout" class="btn text-grey" style="margin-right: 20px;">Logout</a>
          {{else}}
            <a href="/register" class="btn text-dark fw-bold">Register</a>
            <a href="/login" class="btn text-grey" style="margin-right: 20px;">Login</a>
          {{/if}}
          <a href="/contact" class="btn btn-outline-success bg-dark text-white" style="margin-right: 20px;">Contact</a>
        </form>
      </div>
    </div>
  </nav>
  {{! AKHIR NAVBAR }}

  <body style="background-color: rgb(220, 220, 220);">
    {{! FORM }}
    <h1 style="margin-top: 100px; text-align: center">GET IN TOUCH</h1>
    <form class="form" action="#">
      <div class="mb-3">
        <label for="input-name" class="form-label">Name</label>
        <input type="text" class="form-control" id="input-name" name="inputName" aria-describedby="emailHelp" />
      </div>
      <div class="mb-3">
        <label for="input-email" class="form-label">Email</label>
        <input type="email" class="form-control" id="input-email" name="inputEmail" />
        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
      </div>
      <div class="mb-3">
        <label for="input-number" class="form-label">Phone Number</label>
        <input type="number" class="form-control" id="input-number" name="inputNumber" aria-describedby="emailHelp" />
        <div id="emailHelp" class="form-text">We'll never share your phone number with anyone else.</div>
      </div>
      <div class="mb-3">
        <label for="input-subject" class="form-label">Subject</label>
        <select id="input-subject" class="form-select" aria-label="Default select example">
          <option selected>Select</option>
          <option value="1">Fullstack Developer</option>
          <option value="2">Frontend Developer</option>
          <option value="3">Backend Developer</option>
        </select>
      </div>
      <div class="mb-3">
        <label for="input-comment" class="form-label">Message</label>
        <div class="form-floating">
          <textarea class="form-control" placeholder="Leave a comment here" id="input-message" style="resize: none;"></textarea>
        </div>
      </div>
      <div class="mt-4" style="text-align: end;">
        <button type="button" onclick="submitData()">Submit</button>
      </div>
    </form>
    <script src="assets/js/form.js"></script>
  </body>
  {{! AKHIR FORM }}
</html>