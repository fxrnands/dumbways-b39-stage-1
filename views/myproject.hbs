<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Project Page</title>
    <link rel="icon" href="assets/images/34464790.png" />
    <link rel="stylesheet" href="../assets/css/myproject.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous" />
  </head>

  <body style="background-color: rgb(220, 220, 220);">
    {{! NAVBAR }}
    <nav class="navbar navbar-expand-lg bg-light fixed-top" style="height: 60px;">
      <div class="container-fluid">
        <img src="assets/images/logo.png" alt="logo-dumbways" class="ms-4 me-4" />
        <a class="navbar-brand" href="#">Personal Web</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">Home</a>
            </li>
            {{#if this.isLogin}}
              <li class="nav-item">
                <a class="nav-link" href="/myproject">Add Project</a>
              </li>
            {{/if}}
          </ul>
          <form class="d-flex mt-3">
            {{#if this.isLogin}}
              <a href="#" class="btn text-dark fw-bold">Hallo, {{user.name}}</a>
              <a href="/logout" class="btn text-grey" style="margin-right: 20px;">Logout</a>
            {{else}}
              <a href="/register" class="btn text-dark fw-bold">Register</a>
              <a href="/login" class="btn text-grey" style="margin-right: 20px;">Login</a>
            {{/if}}
            <a href="/contact" class="btn btn-outline-success bg-dark text-white" style="margin-right: 20px;">Contact</a>
          </form>
        </div>
      </div>
    </nav>
    {{! AKHIR NAVBAR }}

    {{! FORM ADD PROJECT }}
    <div class="isi-form">
      <h1 style="text-align: center; margin-top: 40px; margin-bottom: 40px;">ADD MY PROJECT</h1>
      <form action="/myproject" method="post" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="input-name" class="form-label">Name</label>
          <input type="text" class="form-control" id="input-name" name="inputName" aria-describedby="emailHelp" />
        </div>
        <div class="date">
          <div class="mb-3 me-3">
            <label for="input-date" class="form-label">Start Date</label>
            <input class="form-control" id="input-start-date" type="date" name="inputStartDate" />
          </div>
          <div class="mb-3">
            <label for="input-date" class="form-label">End Date</label>
            <input class="form-control" id="input-end-date" type="date" name="inputEndDate" />
          </div>
        </div>
        <div class="mb-3">
          <label for="input-comment" class="form-label">Description</label>
          <div class="form-floating">
            <textarea class="form-control" placeholder="Leave a description here" id="input-message" name="inputDescription" style="resize: none;"></textarea>
          </div>
        </div>
        <div>
          <label for="checkbox">Technologies</label>
          <div class="checkbox-technologies" name="checkboxDefault">
            <div class="checkbox-kiri">
              <div>
                <input value="node-js" name="inputNode" type="checkbox" id="inputNode" />
                <label class="fontTech" for="inputNode"> Node JS </label>
              </div>
              <div>
                <input value="react" name="inputReact" type="checkbox" id="inputReact" />
                <label class="fontTech" for="inputReact"> React JS </label>
              </div>
            </div>
            <div class="checkbox-kanan">
              <div>
                <input value="java" name="inputNext" type="checkbox" id="inputNext" />
                <label class="fontTech" for="inputNext"> Next JS </label>
              </div>
              <div>
                <input value="square-js" name="inputTS" type="checkbox" id="inputTS" />
                <label class="fontTech" for="inputTS"> TypeScript </label>
              </div>
            </div>
          </div>
        </div>
        <div>
          <label>Upload Image</label>
          <div class="input-group mb-3 mt-3">
            <input type="file" class="form-control" name="inputImages" id="inputGroupFile02" />
            <label class="input-group-text" for="inputGroupFile02"><img src="assets/images/file.png" alt="clip" /></label>
          </div>
        </div>
        <button type="submit" class="btn bg-dark text-white" style="margin-top: 10px;">Submit</button>
      </form>
    </div>
    {{! AKHIR FORM ADD PROJECT }}
  </body>
</html>