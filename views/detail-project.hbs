<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pasar Coding di Indonesia</title>
    <link rel="icon" href="/assets/images/34464790.png" />
    <link rel="stylesheet" href="../assets/css/detail-project.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous" />
  </head>

  <body style="background-color: rgb(220, 220, 220);">

    {{! NAVBAR }}
    <nav class="navbar navbar-expand-lg bg-light fixed-top" style="height: 60px;">
      <div class="container-fluid">
        <img src="/assets/images/logo.png" alt="logo-dumbways" class="ms-4 me-4" />
        <a class="navbar-brand" href="#">Welcome to my Personal Web</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">Home</a>
            </li>
            {{#if this.isLogin}}
            <li class="nav-item">
              <a class="nav-link" href="/myproject">Add Project</a>
            </li>
            {{/if}}
          </ul>
          <form class="d-flex mt-3">
            {{#if this.isLogin}}
            <a href="#" class="btn text-dark fw-bold">Hallo, {{user.name}}</a>
            <a href="/logout" class="btn text-grey" style="margin-right: 20px;">Logout</a>
            {{else}}
            <a href="/register" class="btn text-dark fw-bold">Register</a>
            <a href="/login" class="btn text-grey" style="margin-right: 20px;">Login</a>
            {{/if}}
            <a href="/contact" class="btn btn-outline-success bg-dark text-white" style="margin-right: 20px;">Contact</a>
          </form>
        </div>
      </div>
    </nav>
    {{! AKHIR NAVBAR }}

    {{!-- BAGIAN DETAIL PROJECT --}}
    <div class="card-thread">
      <h1 class="judul-thread">
        {{data.name}}
      </h1>

      <div class="head-thread">
        <img class="foto-programmer" src="/img-upload/{{data.images}}" alt="foto-programmer" />
        <div class="durasi-dan-tanggal">
          <div>
            <h2 style="font-size: 25px;">Duration</h2>
            <h3 class="durasi"> <img class="foto-durasi" src="/assets/images/calendar.png" alt="calendar" style="width: 20px;" /> {{data.start_date}} - {{data.end_date}} </h3>
            <h3 class="durasi"> <img class="foto-durasi" src="/assets/images/clock.png" alt="clock" style="width: 20px;" /> {{data.duration}} </h3>
          </div>
          <div>
            <h2 style="font-size: 25px; margin-top: 20px;">Technologies</h2>
            <div class="blog-technologies">
              <div class="logo-kiri">
                <h3 class="logo-js"> <img class="foto-js" src="/assets/images/reactjs-logo.png" alt="reactjs-logo" style="width: 20px;" /> React JS </h3>
                <h3 class="logo-js"> <img class="foto-js" src="/assets/images/nodejs-logo.png" alt="nodejs-logo" style="width: 20px;" /> Node JS </h3>
              </div>
              <div class="logo-kanan">
                <h3 class="logo-js"> <img class="foto-js" src="/assets/images/javascript-logo.png" alt="js-logo" style="width: 20px;" /> JavaScript </h3>
                <h3 class="logo-js"> <img class="foto-js" src="/assets/images/socket-io.png" alt="secoketio-logo" style="width: 20px;" /> Socket IO </h3>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="isi-thread">
        <p>
          {{data.description}}
        </p>
      </div>
    </div>
    {{!-- BAGIAN AKHIR DETAIL PROJECT --}}

  </body>
</html>