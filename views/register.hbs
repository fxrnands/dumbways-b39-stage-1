  <body style="background-color: rgb(220, 220, 220);">

    {{! FORM REGISTER }}
    <h1 style="margin-top: 100px; text-align: center">REGISTER YOUR ACCOUNT</h1>
    <form class="form" action="/register" method="post">
      <div class="mb-3">
        <label for="inputName" class="form-label">Name</label>
        <input type="text" class="form-control" id="inputName" name="inputName" aria-describedby="emailHelp" />
      </div>
      <div class="mb-3">
        <label for="inputEmail" class="form-label">Email</label>
        <input type="email" class="form-control" id="inputEmail" name="inputEmail" />
        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
      </div>
      <div class="mb-3">
        <label for="inputPassword" class="form-label">Password</label>
        <input type="password" class="form-control" id="inputPassword" name="inputPassword" aria-describedby="emailHelp" />
        <div id="emailHelp" class="form-text">We'll never share your password with anyone else.</div>
      </div>
      <div class="mt-4" style="text-align: end;">
        <button type="submit" class="btn bg-dark text-white" style="margin-top: 10px;">Submit</button>
      </div>
    </form>
    {{! AKHIR FORM REGISTER }}

